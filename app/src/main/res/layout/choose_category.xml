<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/chooseCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/choose_category"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white_background"
        android:textSize="27sp" />

    <ListView
        android:id="@+id/categoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chooseCategoryTitle"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/choose_back"
        android:paddingBottom="60dp" />

    <Button
        android:id="@+id/choose_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/back_to_main_menu"
        android:textColor="@color/white"
        android:backgroundTint="@color/secondary_background"
        android:textSize="20sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>